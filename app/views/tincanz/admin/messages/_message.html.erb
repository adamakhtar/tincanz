<% @message_presenter = Tincanz::MessagePresenter.new(self, message, current_user: tincanz_user) %>

<%= content_tag_for :div, message do %>
  <div class="message-header">
    <div class="message-header-top">
      <div class="inner">
        <div class="message-date">
          <%= @message_presenter.created_at %>
        </div>
        <div class="message-participants">
          <span class="author"> 
            <%= @message_presenter.author %>
          </span>
          sent to 
          <span class="recipients">
            <%= @message_presenter.recipient %>
          </span>
        </div>
        <div class="actions">
          <%= link_to t('tincanz.messages.reply'), new_admin_conversation_message_path(message.conversation, reply_to_id: message.id)  unless message.user == tincanz_user %>
        </div>


      </div>
    </div>

    <% if @message_presenter.multiple_recipients? %>
      <div class="message-header-bottom">
        <div class="inner">
          <div class="recipients-list">
            <% @message_presenter.recipients.each do |r| %>
              <span><%= r.tincanz_email %></span>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </div>

  <div class="message-body">
    <div class="inner">
      <div class="content">
        <%= simple_format message.content %>
      </div>
    </div>
  </div>
<% end %>

