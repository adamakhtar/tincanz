<div class="inbox-toolbar">
  <%= content_tag :li, class: ('active' if params[:tab] == 'All' ) do %>
    <%= link_to t('tincanz.conversations.all'), admin_conversations_path(tab: 'All') %>
  <% end %>

  <%= content_tag :li, class: ('active' if params[:tab] == 'Yours' ) do %>
    <%= link_to t('tincanz.conversations.yours'), admin_conversations_path(tab: 'Yours') %>
  <% end %>

  <%= content_tag :li, class: ('active' if params[:tab] == 'Nobody' ) do %>
    <%= link_to t('tincanz.conversations.nobody'), admin_conversations_path(tab: 'Nobody') %>
  <% end %>
</div>

<div class="conversations-list">
  <div class="column">

    <% @conversations.each do |conversation| %>
      <%= content_tag_for :div, conversation do %>

        <a href="<%= admin_conversation_path(conversation) %>">

          <div class="conversation-header">
            <div class="inner">
              <div class="participants-count">
                <%= conversation.participants.count %> <%= t('tincanz.general.participants') %>
              </div>

              <div class="messages-count">
                <span class="badge"><%= conversation.messages.count %></span>
              </div>
            </div>

          </div>
          
          <div class="message-stream">
            <%= render partial: 'tincanz/admin/conversations/message_summary', object: conversation.first_message, as: :message %>

            <% subsequent = conversation.subsequent_messages.count %>

            <% if subsequent > 0 %>
              
              <% if subsequent > 2 %>
                <div class="message-collapsed"></div>
                <div class="message-collapsed"></div>      
              <% end %>

              <%= render partial: 'tincanz/admin/conversations/message_summary', object: conversation.most_recent_message, as: :message %>        
            <% end %>          
          </div>
        <% end %>
      <% end %>
    <a>
  </div>
</div>