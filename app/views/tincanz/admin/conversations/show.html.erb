<h1><%= @conversation.subject %></h1>

<div class="conversation-message">

  <%= render 'tincanz/admin/messages/message', message: @first_message %>

</div>

<div class="conversation-replies">
  <h3>Replies</h3>
  <div class="replies-list">
    <%= render partial: 'tincanz/admin/messages/message', collection: @subsequent_messages %>
  </div>
</div>

<div class="conversation-reply">
  <h3>Reply</h3>
  <%= form_for [:admin, @message], url: admin_messages_path do |f| %>

    <%= f.hidden_field :conversation_id, value: @message.conversation_id %>

    <%= f.hidden_field :user_id, value: tincanz_user.id %>

    <div class="form-group">
      <label for='message_content'>Content</label>
      <%= f.text_field :content, rows: 5 %>
    </div>
              
    <%= f.submit 'Reply' %>

  <% end %>
</div>